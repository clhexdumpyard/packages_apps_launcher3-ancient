<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.launcher3">

    <androidx.preference.PreferenceScreen
        android:persistent="false"
        android:title="@string/suggestion_pref_screen_title"
        android:key="pref_suggestions"
        android:summary="@string/suggestion_pref_screen_desc">
        <intent android:action="android.settings.ACTION_CONTENT_SUGGESTIONS_SETTINGS" />
    </androidx.preference.PreferenceScreen>

    <com.android.launcher3.settings.preferences.CustomSeekBarPreference
        android:key="pref_all_apps_scrim_alpha"
        android:title="@string/all_apps_background_opacity_title"
        android:persistent="true"
        android:max="100"
        android:min="0"
        settings:units="%"
        android:defaultValue="100" />

    <SwitchPreference
        android:key="pref_drawer_show_labels"
        android:title="@string/drawer_show_labels"
        android:defaultValue="true"
        android:persistent="true" />

    <PreferenceCategory
        android:key="grid_category"
        android:title="@string/grid_category_title">

    <ListPreference
        android:key="pref_grid_columns"
        android:title="@string/number_of_columns_title"
        android:summary="%s"
        android:entries="@array/grid_names"
        android:entryValues="@array/grid_values"
        android:defaultValue="-1"
        android:persistent="true" />

    <ListPreference
        android:key="pref_grid_rows"
        android:title="@string/number_of_rows_title"
        android:summary="%s"
        android:entries="@array/grid_names"
        android:entryValues="@array/grid_values"
        android:defaultValue="-1"
        android:persistent="true" />

    <ListPreference
        android:key="pref_hotseat_icons"
        android:title="@string/number_of_hotseat_title"
        android:summary="%s"
        android:entries="@array/grid_names"
        android:entryValues="@array/grid_values"
        android:defaultValue="-1"
        android:persistent="true" />
     </PreferenceCategory>

    <SwitchPreference
        android:defaultValue="true"
        android:key="pref_enable_minus_one"
        android:summary="@string/pref_show_google_now_summary"
        android:title="@string/title_show_google_app" />

    <SwitchPreference
        android:key="pref_show_quickspace"
        android:title="@string/show_quickspace_title"
        android:summary="@string/show_quickspace_summary"
        android:defaultValue="true"
        android:persistent="true"/>

    <SwitchPreference
        android:key="pref_desktop_show_labels"
        android:title="@string/desktop_show_labels"
        android:defaultValue="true"
        android:persistent="true" />

<PreferenceCategory
        android:key="gestures_category"
        android:title="@string/gestures_category">

    <SwitchPreference
        android:key="pref_notification_gesture"
        android:title="@string/pref_notifications_gesture_title"
        android:summary="@string/pref_notifications_gesture_summary"
        android:defaultValue="true"
        android:persistent="true"/>

    <SwitchPreference
        android:key="pref_dt_gesture"
        android:title="@string/pref_dt_gesture_title"
        android:summary="@string/pref_dt_gesture_summary"
        android:defaultValue="true"
        android:persistent="true"/>

</PreferenceCategory>

</androidx.preference.PreferenceScreen> 
